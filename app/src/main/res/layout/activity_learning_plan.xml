<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F5F5F5"
    tools:context=".LearningPlanActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Learning Plan"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#1976D2"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fill in the details below"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="24dp"/>

        <!-- Week Number -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Week Number *"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/etWeekNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="e.g., Week 5"
            android:inputType="text"
            android:padding="12dp"
            android:background="@android:color/white"
            android:layout_marginBottom="16dp"/>

        <!-- Class/Grade -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Class/Grade *"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/etClass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="e.g., Grade 5A"
            android:inputType="text"
            android:padding="12dp"
            android:background="@android:color/white"
            android:layout_marginBottom="16dp"/>

        <!-- Subject -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subject *"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/etSubject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="e.g., Mathematics"
            android:inputType="text"
            android:padding="12dp"
            android:background="@android:color/white"
            android:layout_marginBottom="16dp"/>

        <!-- Learning Objectives -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Learning Objectives *"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/etObjectives"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:hint="What should students learn this week?"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:padding="12dp"
            android:background="@android:color/white"
            android:layout_marginBottom="16dp"/>

        <!-- Topics to Cover -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Topics to Cover *"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/etTopics"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:hint="List the main topics"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:padding="12dp"
            android:background="@android:color/white"
            android:layout_marginBottom="16dp"/>

        <!-- Materials Needed -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Materials Needed"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/etMaterials"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="Books, tools, resources needed"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:padding="12dp"
            android:background="@android:color/white"
            android:layout_marginBottom="16dp"/>

        <!-- Assessment Methods -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Assessment Methods"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/etAssessment"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="How will you assess learning?"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:padding="12dp"
            android:background="@android:color/white"
            android:layout_marginBottom="24dp"/>

        <!-- Generate Button -->
        <Button
            android:id="@+id/btnGenerate"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Generate Document"
            android:textSize="18sp"
            android:textStyle="bold"
            android:backgroundTint="#4CAF50"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>

</ScrollView>