            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Assignment"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="4dp"/>
        <EditText
            android:id="@+id/etAssignment"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="Homework or follow-up tasks"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:padding="12dp"
            android:background="@android:color/white"
            android:layout_marginBottom="12dp"/>

        <!-- Total Time -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Time *"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="4dp"/>
        <EditText
            android:id="@+id/etTotalTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="e.g., 120 minutes (2 hours)"
            android:inputType="text"
            android:padding="12dp"
            android:background="@android:color/white"
            android:layout_marginBottom="12dp"/>

        <!-- Session Reflection -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Session Reflection (Remarks)"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="4dp"/>
        <EditText
            android:id="@+id/etSessionReflection"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="Your reflections after the session"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:padding="12dp"
            android:background="@android:color/white"
            android:layout_marginBottom="12dp"/>

        <!-- Signature -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Signature"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="4dp"/>
        <EditText
            android:id="@+id/etSignature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your name/signature"
            android:inputType="text"
            android:padding="12dp"
            android:background="@android:color/white"
            android:layout_marginBottom="24dp"/>

        <!-- Generate Button -->
        <Button
            android:id="@+id/btnGenerate"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Generate Session Plan"
            android:textSize="18sp"
            android:textStyle="bold"
            android:backgroundTint="#2196F3"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>

</ScrollView>